
public class Pessoa {
	private String nome;
	private int idade;
	private double salarioMensal;
	private double salarioAnual;
	
	
	public Pessoa() {
		// construtor vazio
	}
	
	public Pessoa(String nome) {
		this.nome = nome;
	}
	
	public Pessoa(int idade) {
		this.idade = idade;
	}
	
	public Pessoa(String nome, int idade) {
		this.nome = nome;
		this.idade = idade;
	}
	
	public void setNome(String nome) {
		this.nome = nome;
	}
	
	public String getNome() {
		return this.nome;
	}
}
